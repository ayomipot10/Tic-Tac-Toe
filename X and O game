import tkinter as tk
from tkinter import messagebox

# Create main window
root = tk.Tk()
root.title("X and O game")

# 2D array to track game state
game_state = [["" for _ in range(3)] for _ in range(3)]

# Start with player X
current_player = "X"

# Function to check for a winner
def check_winner():
    # Horizontal
    for row in game_state:
        if row[0] == row[1] == row[2] != "":
            return row[0]
    # Vertical
    for col in range(3):
        if game_state[0][col] == game_state[1][col] == game_state[2][col] != "":
            return game_state[0][col]
    # Diagonal
    if game_state[0][0] == game_state[1][1] == game_state[2][2] != "":
        return game_state[0][0]
    if game_state[0][2] == game_state[1][1] == game_state[2][0] != "":
        return game_state[0][2]
    return None

# Function to check for draw
def check_draw():
    for row in game_state:
        if "" in row:
            return False
    return True

# Function for button click
def button_click(row, col):
    global current_player
    if game_state[row][col] == "":
        game_state[row][col] = current_player
        buttons[row][col].config(text=current_player, state="disabled")
        
        winner = check_winner()
        if winner:
            messagebox.showinfo("Game Over", f"Player {winner} wins!")
            reset_game()
            return
        elif check_draw():
            messagebox.showinfo("Game Over", "It's a draw!")
            reset_game()
            return
        
        # Switch player
        current_player = "O" if current_player == "X" else "X"

# Function to reset game
def reset_game():
    global game_state, current_player
    game_state = [["" for _ in range(3)] for _ in range(3)]
    current_player = "X"
    for r in range(3):
        for c in range(3):
            buttons[r][c].config(text="", state="normal")

# Create 3x3 grid of buttons
buttons = [[None for _ in range(3)] for _ in range(3)]
for r in range(3):
    for c in range(3):
        btn = tk.Button(root, text="", width=10, height=5,
                        command=lambda r=r, c=c: button_click(r, c))
        btn.grid(row=r, column=c)
        buttons[r][c] = btn

root.mainloop()
